.Base {
    background-color: rgb(195, 21, 0);
    width: 300px;
    height: 100px;
    transition-duration: 0.2s;
}

.Base:hover {
    scale: 1.1 1.1;
    transition-duration: 0.2s;
}

.Line {
    background-color: rgba(255, 235, 148, 0.6);
    position: absolute;
    width: 20%;
    height: 20px;
    bottom: 0;
    left: 0;
    transition-duration: 0.2s;
}

.Base:hover .Line {
    width: 100%;
    transition-duration: 0.2s;
}
