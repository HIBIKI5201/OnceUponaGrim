.button {
    width: 300px;
    height: 50px;
    font-size: 25px;
    -unity-font-style: bold;
    background-color: rgb(255, 255, 255);
    transition-duration: 0.1s;
}

.button:hover {
    scale: 1.1 1.1;
    -unity-background-image-tint-color: rgba(0, 255, 253, 0);
    transition-duration: 0.2s;
    background-color: rgb(131, 252, 255);
}

.button:active {
    background-color: rgb(0, 195, 191);
}
